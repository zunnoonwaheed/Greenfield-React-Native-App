{
  "name": "greenfield",
  "version": "1.0.0",
  "description": "Expo React Native app with Express API on Vercel",
  "private": true,
  "license": "MIT",
  "scripts": {
    "dev:app": "cd app && npm start",
    "dev:api": "cd api && npm run dev",
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:app\"",
    "install:all": "npm install && cd app && npm install && cd ../api && npm install",
    "vercel-build": "echo 'No build required for API'",
    "deploy": "vercel --prod"
  },
  "keywords": ["expo", "react-native", "express", "vercel", "typescript"],
  "devDependencies": {
    "concurrently": "^9.1.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
